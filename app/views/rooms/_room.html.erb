<div class="card">
  <%= link_to image_tag(room.user.image, class: :card__img), room_path(room.id) %>
  <div class="card__body">
    <%= link_to room.name, room_path(room.id), class: :card__title%>
    <p class="card__summary">
      <%= room.purpose.name %>
    </p>
    <%= link_to "by #{room.user.nickname}", "#", class: :card__user %>
  </div>
</div>